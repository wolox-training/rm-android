<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_graph"
    app:startDestination="@id/homePageFragment">
    <fragment
        android:id="@+id/homePageFragment"
        android:name="ar.com.wolox.android.example.ui.home.HomePageFragment"
        android:label="HomePageFragment"
        tools:layout="@layout/fragment_homepage">
        <action
            android:id="@+id/action_homePageFragment_to_newDetailFragment"
            app:destination="@id/newDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newDetailFragment"
        android:name="ar.com.wolox.android.example.ui.newdetail.NewDetailFragment"
        android:label="NewDetailFragment"
        tools:layout="@layout/fragment_new_detail"/>
</navigation>