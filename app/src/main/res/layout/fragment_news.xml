<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vNewsSwipeContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vNewsRecycler"
            android:layout_width="@dimen/spacing_none"
            android:layout_height="@dimen/spacing_none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_new" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/vNewsAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_big_extra"
        android:layout_marginBottom="@dimen/spacing_large"
        android:src="@drawable/ic_add"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fab_colorNormal="@color/colorAccent" />

    <ImageView
        android:id="@+id/vNewsNoContentImage"
        android:layout_width="@dimen/image_big_size"
        android:layout_height="@dimen/image_big_size"
        android:layout_marginStart="@dimen/spacing_medium_more"
        android:layout_marginTop="@dimen/spacing_medium_more"
        android:layout_marginEnd="@dimen/spacing_medium_more"
        android:layout_marginBottom="@dimen/spacing_medium_more"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_sentiment_dissatisfied"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>