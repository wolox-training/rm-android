<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vYoutubeImage"
        android:layout_width="@dimen/image_big_size"
        android:layout_height="@dimen/image_big_size"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="@dimen/static_spacing_tiny"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/vYoutubeTitle"
        android:layout_width="@dimen/spacing_none"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_medium_more"
        android:ellipsize="end"
        android:maxLines="@integer/lines_min"
        android:textColor="@color/colorTopTitle"
        android:textSize="@dimen/font_medium_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vYoutubeImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Título del vídeo" />

    <TextView
        android:id="@+id/vYoutubeDescription"
        android:layout_width="@dimen/spacing_none"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_medium_more"
        android:layout_marginEnd="@dimen/spacing_medium_more"
        android:ellipsize="end"
        android:maxLines="@integer/lines_min"
        android:textColor="@color/colorDetailNew"
        android:textSize="@dimen/font_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vYoutubeImage"
        app:layout_constraintTop_toBottomOf="@+id/vYoutubeTitle"
        tools:text="@tools:sample/lorem/random" />

    <View
        android:id="@+id/vYoutubeSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/static_spacing_tiniest"
        android:background="@color/colorDetailNew"
        android:layout_marginStart="@dimen/static_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>